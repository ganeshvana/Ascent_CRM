<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="crm_drop_wizard" model="ir.ui.view" >
        <field name="name">Crm Drop Wizard</field>
        <field name="model">crm.drop.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dropped Reason">
                <group>
                    <field name="reason_drop_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                </group>
                <footer>
                    <button name="action_drop_reason_apply" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_drop_wizard"
        name="Drop Reason"
        res_model="crm.drop.wizard"
        view_mode="form"
        target="new"/>

